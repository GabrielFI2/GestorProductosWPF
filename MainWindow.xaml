<Window x:Class="GestorProductosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="Gestor de Productos" Height="450" Width="800" Background="White">
    
    <TabControl>
        <TabItem Header="Inventario">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>





                    <ColumnDefinition Width="27*"/>
                    <ColumnDefinition Width="27*"/>
                    <ColumnDefinition Width="137*"/>
                    <ColumnDefinition Width="603*"/>





                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dataGridProductos" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="4" Margin="-24,0,269,0"/>
                <Button x:Name="bbnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="6,163,0,0" VerticalAlignment="Top" Height="71" Width="138" Grid.ColumnSpan="3"/>
                <Button x:Name="btnAgregar" Grid.Column="3" Content="Agregar" HorizontalAlignment="Left" Margin="216,198,0,0" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>
        <TabItem Header="Ordenamiento">
            <Grid x:Name="CanvasGrfica" Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="131*"/>
                    <ColumnDefinition Width="51*"/>
                    <ColumnDefinition Width="27*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="69*"/>
                    <ColumnDefinition Width="479*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ComboTipoBusqueda" HorizontalAlignment="Left" Margin="126,0,0,0" VerticalAlignment="Top" Width="516" Height="103" Grid.ColumnSpan="6"/>
                <Button x:Name="btnOrdenar" Content="Ordenar" HorizontalAlignment="Left" Margin="0,29,0,0" VerticalAlignment="Top" Height="85" Width="169" Grid.ColumnSpan="2"/>
                <ListView x:Name="listViewOrdenados" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="56,108,198,105" Grid.Column="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Canvas Margin="84,120,476,64" RenderTransformOrigin="0.506,0.291" Grid.ColumnSpan="6">
                    <Rectangle Height="100" Canvas.Left="65" Stroke="#FFE80303" Canvas.Top="96" Width="100"/>
                </Canvas>
            </Grid>
        </TabItem>
        <TabItem Header="Busqueda"/>
        <Grid Background="#FFE5E5E5">
            <Grid.ColumnDefinitions>





            </Grid.ColumnDefinitions>
            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Margin="-24,0,269,0"/>

        </Grid>



    </TabControl>

</Window>
